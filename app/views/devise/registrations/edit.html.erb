<%= render 'shared/header'%>

<%= form_with model: @user, url: user_registration_path ,class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        会員情報変更
      </h1>
    </div>

    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
        <p class='error-text-message'>
        <% if @user.errors.include?(:nickname) %>
          <%= @user.errors.full_messages_for(:nickname).first %>
        <% end %>
        </p>
      </div>
      <%= f.text_field :nickname, class: "input-default", id: "nickname", placeholder: "例) わんこ大好き太郎", maxlength: "40" %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
        <p class='error-text-message'>
        <% if @user.errors.include?(:email) %>
          <%= @user.errors.full_messages_for(:email).first %>
        <% end %>
        </p>
      </div>
      <%= f.email_field :email, class: "input-default", id: "email", placeholder: "例) PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">お名前</label>
        <span class="indispensable">必須</span>
        <p class='error-text-message'>
        <% if @user.errors.include?(:full_name) %>
          <%= @user.errors.full_messages_for(:full_name).first %>
        <% end %>
        </p>
      </div>
      <%= f.text_field :full_name, class: "input-default", id: "full-name", placeholder: "例) 鈴木 一郎", maxlength: "40" %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">フリガナ</label>
        <span class="indispensable">必須</span>
        <p class='error-text-message'>
        <% if @user.errors.include?(:full_name_kana) %>
          <%= @user.errors.full_messages_for(:full_name_kana).first %>
        <% end %>
        </p>
      </div>
      <%= f.text_field :full_name_kana, class: "input-default", id: "full-name-kana", placeholder: "例) スズキ イチロウ", maxlength: "40" %>
    </div>
    <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">郵便番号</label>
          <span class="indispensable">必須</span>
          <p class='error-text-message'>
            <% if @user.errors.include?(:postal_code) %>
              <%= @user.errors.full_messages_for(:postal_code).first %>
            <% end %>
          </p>
        </div>
        <%= f.text_field :postal_code, class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"8" %>
        <p class='info-text'>
          ※ハイフンあり
        </p>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">都道府県</label>
          <span class="indispensable">必須</span>
          <p class='error-text-message'>
            <% if @user.errors.include?(:prefecture_id) %>
              <%= @user.errors.full_messages_for(:prefecture_id).first %>
            <% end %>
          </p>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">市区町村</label>
          <span class="indispensable">必須</span>
          <p class='error-text-message'>
            <% if @user.errors.include?(:city) %>
              <%= @user.errors.full_messages_for(:city).first %>
            <% end %>
          </p>
        </div>
        <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）名古屋市中区"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">番地</label>
          <span class="indispensable">必須</span>
          <p class='error-text-message'>
            <% if @user.errors.include?(:address) %>
              <%= @user.errors.full_messages_for(:address).first %>
            <% end %>
          </p>
        </div>
        <%= f.text_field :address, class:"input-default", id:"addresses", placeholder:"例）栄3-1"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">建物名</label>
        </div>
        <%= f.text_field :building_name, class:"input-default", id:"building", placeholder:"例）オアシスビル503"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">電話番号</label>
          <span class="indispensable">必須</span>
          <p class='error-text-message'>
            <% if @user.errors.include?(:phone_number) %>
              <%= @user.errors.full_messages_for(:phone_number).first %>
            <% end %>
          </p>
        </div>
        <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
        <p class='info-text'>
          ※ハイフンなし
        </p>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">職業</label>
          <span class="indispensable">必須</span>
          <p class='error-text-message'>
            <% if @user.errors.include?(:job_id) %>
              <%= @user.errors.full_messages_for(:job_id).first %>
            <% end %>
          </p>
        </div>
        <%= f.collection_select(:job_id, Job.all, :id, :name, {}, {class:"select-box", id:"job"}) %>
        <p class='info-text'>
        ※選択してください
        </p>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">年齢</label>
          <span class="indispensable">必須</span>
          <p class='error-text-message'>
            <% if @user.errors.include?(:age_id) %>
              <%= @user.errors.full_messages_for(:age_id).first %>
            <% end %>
          </p>
        </div>
        <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box", id:"age"}) %>
        <p class='info-text'>
        ※選択してください
        </p>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">性別</label>
          <span class="indispensable">必須</span>
          <p class='error-text-message'>
            <% if @user.errors.include?(:gender_id) %>
              <%= @user.errors.full_messages_for(:gender_id).first %>
            <% end %>
          </p>
        </div>
        <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"gender"}) %>
        <p class='info-text'>
        ※選択してください
        </p>
      </div>
      <div class='register-btn'>
        <%= f.submit "変更する", class: "register-red-btn"%>
      </div>
  </div>
<% end %>

<%= render 'shared/footer'%>
