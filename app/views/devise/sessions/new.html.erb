<%= render 'shared/header'%>

<%= form_with model: @user, url: new_user_session_path ,class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ログイン
      </h1>
    </div>
  
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class: "input-default", id: "email", placeholder: "例) PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class: "input-default", id: "password", placeholder: "8文字以上半角英数字", autofocus: true %>
      <p class='info-text'>
        ※英数字混合8文字以上で入力してください
      </p>
    </div>
    <div class='register-btn'>
      <%= f.submit "ログインする", class: "register-red-btn"%>
    </div>
  </div>
<% end %>

<%= render 'shared/footer'%>

